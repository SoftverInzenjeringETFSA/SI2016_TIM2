<div class="profilePage">

    <!-- Background Image -->
    <div class="img img-responsive pozadinaProfil cover-screen"></div>

    <div class="container">

      {{#if (eq session.data.authenticated.role "ROLE_ADMIN")}}
      <div class={{modalClass}} id="myModal" role="dialog" style={{modalStyle}}>
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" {{action 'sakrijModal'}}>&times;</button>
              <h4 class="modal-title">Izvještaj</h4>
            </div>
            <div class="modal-body">
              <div>Ukupni broj oglasa: </div> <div>{{izvjestaj.brojOglasa}}</div>
              <div>Broj registrovanih poslodavaca: </div> <div>{{izvjestaj.brojOglasa}}</div>
              <div>Broj registrovanih nezaposlenih korisnika: </div> <div>{{izvjestaj.brojNezaposlenih}}</div>
              <div>Broj prijava na oglase: </div> <div>{{izvjestaj.brojPrijava}}</div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'sakrijModal'}}>Close</button>
            </div>
          </div>
        </div>
      </div>
      {{/if}}

      <!-- On Profile Delete Prompt Modal -->
      <div class={{modalProfileDeleteClass}} id="myModal" role="dialog" style={{modalProfileDeleteStyle}}>
        <div class="modal-dialog modal-lg">
          <form class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" {{action 'sakrijProfileDeleteModal'}}>
                &times;
              </button>
              <h4 class="modal-title">Brisanje profila</h4>
            </div>
            <div class="modal-body">
              <p>Ako ste sigurni da želite izbrisati svoj profil, u polje ispod unesite svoj password. Ova akcija se ne može poništiti.</p>
              <div class="form-horizontal">
              <div class="form-group">
                <label for="brisanjePassword" class="control-label col-sm-2">Password:</label>
                <div class="col-sm-3">
                  {{input type="password" id="brisanjePassword" class="form-control" value=brisanjePass required="required"}}
                  <p style="color:red !important;">
                  {{confirmationPasswordFailed}}
                  </p>
                </div>
              </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'sakrijProfileDeleteModal'}}>Odustani</button>
              <input type="submit" class="btn btn-danger" {{action 'delete'}} value="Obriši račun" />
            </div>
          </form>
        </div>
      </div>


        <div class="row">
            <!-- Left side -->
            <form class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-lg-5 col-lg-offset-1">
                <div class="col-xs-12 distinct-page-form">
                  <div class="text-center">
                    <h1>Pregled korisničkog računa</h1>
                    <p>Na ovoj stranici možete izmijeniti svoje lične podatke</p>
                    <hr class="h-divider" />
                  </div>
                  <div>
                    <div class="form-group pomjereniTextBox">
                      <label for="inputPassword3_profil">Lozinka:</label><br>
                      {{#if passwordError}}
                        <span class="greskaUnosa">Password mora imati minimalno 6 karaktera!</span><br>
                      {{/if}}
                      {{input type="password" class="form-control" id="inputPassword3_profil" placeholder="Password" value=model.profil.password}}
                    </div>

                  <div class="form-group pomjereniTextBox">
                    <label for="inputPassword3_pon_profil">Ponovite lozinku:</label><br>
                    {{#if ponovljeniPassError}}
                    <span class="greskaUnosa">Unosi lozinke se ne podudaraju.</span>
                    {{/if}}
                    {{input type="password" class="form-control" id="inputPassword3_pon_profil" placeholder="Password" value=ponovljeniPass}}
                  </div>

                    <div class="form-group pomjereniTextBox">
                      <label for="inputEmail3_profil">Email:</label><br>
                      {{#if emailError}}
                        <span class="greskaUnosa">Morate unijeti validan email!</span><br>
                      {{/if}}
                      {{input type="email" class="form-control" id="inputEmail3_profil" placeholder="Email" value=model.profil.email}}
                    </div>

                    {{#if this.model.profil.poslodavac}}
                    <div class="form-group pomjereniTextBox">
                      <label for="inputTelefon1_profil">Telefon:</label><br>
                      {{#if telefonError}}
                        <span class="greskaUnosa">Morate unijeti telefon u formatu 661234567 ili 66123456!</span><br>
                      {{/if}}
                      {{input type="text" class="form-control" id="inputTelefon1_profil" placeholder="123456789" value=model.profil.poslodavac.telefon}}
                    </div>
                    {{/if}}

                    {{#if this.model.profil.nezaposleni}}
                    <div class="form-group pomjereniTextBox">
                      <label for="inputIme1_profil">Ime:</label><br>
                      {{#if imeError}}
                        <span class="greskaUnosa">Morate unijeti ime!</span><br>
                      {{/if}}
                      {{input type="text" class="form-control" id="inputIme1_profil" placeholder="Ime" value=model.profil.nezaposleni.ime}}
                    </div>


                    <div class="form-group pomjereniTextBox">
                      <label for="inputPrezime1_profil">Prezime:</label><br>
                      {{#if prezimeError}}
                        <span class="greskaUnosa">Morate unijeti prezime!</span><br>
                      {{/if}}
                      {{input type="text" class="form-control" id="inputPrezime1_profil" placeholder="Prezime" value=model.profil.nezaposleni.prezime}}
                    </div>
                    {{/if}}

                    {{#if this.model.profil.poslodavac}}
                    <div class="form-group pomjereniTextBox">
                      <label for="inputIme1_profil">Ime:</label><br>
                      {{#if imeError}}
                        <span class="greskaUnosa">Morate unijeti ime!</span><br>
                      {{/if}}
                      {{input type="text" class="form-control" id="inputIme1_profilP" placeholder="Ime" value=model.profil.poslodavac.ime}}
                    </div>


                    <div class="form-group pomjereniTextBox">
                      <label for="inputPrezime1_profil">Prezime:</label><br>
                      {{#if prezimeError}}
                        <span class="greskaUnosa">Morate unijeti prezime!</span><br>
                      {{/if}}
                      {{input type="text" class="form-control" id="inputPrezime1_profilP" placeholder="Prezime" value=model.profil.poslodavac.prezime}}
                    </div>

                    <div class="form-group pomjereniTextBox">
                      <label for="inputFirma1_profil">Firma:</label><br>
                      {{#if nazivFirmeError}}
                        <span class="greskaUnosa">Morate unijeti firmu!</span><br>
                      {{/if}}
                      {{input type="text" class="form-control" id="inputFirma1_profil" placeholder="Firma" value=model.profil.poslodavac.nazivFirme}}
                    </div>
                    {{/if}}

                    {{#if this.model.profil.nezaposleni}}
                    <div class="form-group firma">
                      <label for="inputCV_profil">CV:</label><br>
                      {{#if cvError}}
                        <span class="greskaUnosa">Morate unijeti CV!</span><br>
                      {{/if}}
                      {{textarea class="form-control" id="inputCV_profil" value=model.profil.nezaposleni.cv}}
                    </div>
                    {{/if}}

                    <div class="form-group text-center">
                      {{#if serverError}}
                        <span class="greskaUnosa">Došlo je do greške prilikom ažuriranja profila.</span><br>
                        <span class="greskaUnosa">{{serverErrorText}}</span><br>
                        <p></p>
                      {{/if}}
                      {{#if serverSuccess}}
                        <span class="greskaUnosa">Uspješno ažuriran profil.</span><br>
                      {{/if}}
                        <button type="submit" class="btn btn-success" {{action 'update'}}>Spasi izmjene</button>
                    </div>
                  </div>
                </div>
            </form>

            <!-- Right side -->
            <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-1">
                <!-- Generate Report Form -->
                {{#if (eq session.data.authenticated.role "ROLE_ADMIN")}}

                <form class="distinct-page-form col-xs-12">
                    <div class="col-xs-12 text-center">
                      <h1>Generisanje izvještaja</h1>
                      <p>Kreirajte izvještaja stanja i uspjeha oglasa</p>
                      <hr class="h-divider" />
                    </div>
                    <div class="col-xs-12">
                      <div class="form-group text-center">
                          <button type="submit" class="btn btn-success" {{action 'report'}}>Generiši izvještaj</button>
                      </div>
                    </div>
                </form>

                {{/if}}
                <!-- Delete Profile Form -->
                <form class="distinct-page-form col-xs-12">
                    <div class="col-xs-12 text-center">
                        <h1>Brisanje korisničkog računa</h1>
                        <p>Da li zaista želite napustiti portal Posao.ba?</p>
                        <hr class="h-divider" />
                    </div>

                    <div class="col-xs-12">
                      <div class="form-group text-center">
                          <button type="submit" class="btn btn-danger" {{action 'showProfileDeleteModal'}}>
                            Obriši račun
                          </button>
                      </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>