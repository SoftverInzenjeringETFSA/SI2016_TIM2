<div class="main-page">     
	<div class="container-fluid">
		<div class="row row-eq-height">
			<div class="col-md-3 sidebar">		
				
				<!-- Employer form -->
				<div class="row">
					<form role="search" class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-12 col-lg-12">
						<div class="custom-search-input">
			                <div class="input-group">
			                    {{input type="text" class="form-control input-lg" placeholder="Unesite pojam pretrage..." value=pretraga}}
			                    <span class="input-group-btn">
			                        <button class="btn btn-info btn-lg" type="submit">
			                            <i class="glyphicon glyphicon-search" style="margin-top:2px"></i>
			                        </button>
			                    </span>
			                </div>
			            </div>
					</form>
				</div>
				<hr/>
				<!-- Nezaposleni form -->
				<div class="row center-block">
					<form role="form" class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-12 col-lg-12">
						<div class="form-group">
							<label for="category">Kategorija oglasa:</label>
							<select class="form-control" name="category" onchange={{action "selectKategorija" value="target.value"}}>
							<option value="-1" >-</option>
							{{#each model.kategorije as |kategorija|}}			
								<option value={{kategorija.id}}>{{kategorija.naziv}}</option>
								{{/each}}
							</select>
						</div>
					   	<div class="form-group">
						<label for="filterPoredak">Poredak:</label>
							<select class="form-control" name="filterPoredak" onchange={{action "selectPoredak" value="target.value"}}>
								<option value="TEMP_DESC">Najnoviji ka najstarijim</option>
								<option value="TEMP_ASC">najstariji ka najnovijima</option>
							</select>

						<label for="filter">Lokacija:</label>
							<select class="form-control" name="filter" onchange={{action "selectFilter" value="target.value"}}>
								<option value="-1">-</option>
								{{#each model.lokacije as |lokacija|}}
									<option value={{lokacija.id}}>{{lokacija.naziv}}</option>
								{{/each}}
							</select>

						</div>
						<button type="submit" class="btn btn-default" {{action 'search'}}>Filtriraj</button>
					</form>
				</div>
			</div>

			<div class="col-md-7 col-md-offset-1">
				<table class="table table-hover advert-table">
					<tbody>
						{{#each model.oglasi as |oglas|}}			
						<tr class="row ">				
							<td class="col-md-3 ">
								<h4 class="title">
									{{#link-to 'viewad' oglas.idOglasa}}
										{{oglas.naziv}}
									{{/link-to}}
								</h4>
				                <p class="desc">{{oglas.poslodavac.nazivFirme}}</p>
				                <p class="desc">{{oglas.datumObjave}}</p>				                
							</td>	
							<td class="col-md-8 col-md-offset-1 ">
								<p class="desc">{{oglas.opis}}</p>
							</td>			
						</tr>			
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>