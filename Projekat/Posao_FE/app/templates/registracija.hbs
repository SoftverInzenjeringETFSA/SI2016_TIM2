<div class="registrationPage">
<!-- Background Image -->
    <div class="img img-responsive pozadinaRegistracije cover-screen"></div>
  <div class="container">
    <div class="row">
      <form class="distinct-page-form col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-lg-8 col-lg-offset-2 ">
        <div class="col-xs-12 text-center">
          <h1>Kreiranje korisničkog računa</h1>
          <!--<p>i<i>The expert in anything was once a begginer</i></p>,-->
          <hr class="h-divider" />
        </div>

        <div class="col-xs-12">
          <div class="form-group pomjereniTextBox">
            <label for="inputUsername1">Korisničko ime:</label><br>
            <span class="greskaUnosa">Morate unijeti korisni;ko ime!</span>
            {{input type="text" class="form-control" id="inputUsername1" placeholder="Username" value=username}}
          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputPassword3">Lozinka:</label><br>
            <span class="greskaUnosa">Morate unijeti lozinku!</span>
            {{input type="password" class="form-control" id="inputPassword3" placeholder="Password" value=password}}
          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputEmail3">Email:</label><br>
            <span class="greskaUnosa">Morate unijeti email!</span>
            {{input type="email" class="form-control" id="inputEmail3" placeholder="Email" value=email}}
          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputTelefon1">Telefon:</label><br>
            <span class="greskaUnosa">Morate unijeti telefon!</span>
            {{input type="text" class="form-control" id="inputTelefon1" placeholder="123456789" value=telefon disabled=(poslodavac-helper tip)}}
          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputIme1">Ime:</label><br>
            <span class="greskaUnosa">Morate unijeti ime!</span>
            {{input type="text" class="form-control" id="inputIme1" placeholder="Ime" value=ime}}

          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputPrezime1">Prezime:</label><br>
            <span class="greskaUnosa">Morate unijeti prezime!</span>
            {{input type="text" class="form-control" id="inputPrezime1" placeholder="Prezime" value=prezime}}
          </div>

          <div class="form-group firma">
            <label for="inputFirma1">Firma:</label><br>
            <span class="greskaUnosa">Morate unijeti firmu!</span>
            {{input type="text" class="form-control" id="inputFirma1" placeholder="Firma" value=nazivFirme disabled=(poslodavac-helper tip)}}
          </div>

          
          <div class="form-group pomjereniTextBox">
            <label for="inputCV">CV:</label><br>
            <span class="greskaUnosa">Morate unijeti CV!</span>
            {{textarea class="form-control" id="inputCV" disabled=(nezaposleni-helper tip) value=cv}}
          </div>
          

          <div class="form-group radio-group pomjereniTextBox">
            <label for="tipKorisnika">Tip korisnika:</label>
            <div class="input-group">
                <span class="input-group-addon no-bottom-border">
                    {{radio-button value="Nezaposleni" checked=tip name="tipKorisnika"}}
                </span>
                <p class="form-control no-bottom-border">Nezaposleni</p>
            </div>
            <div class="input-group">
                <span class="input-group-addon no-top-border">
                    {{radio-button value="Poslodavac" checked=tip name="tipKorisnika"}}
                </span>
                <p class="form-control no-top-border">Poslodavac</p>
            </div>
          </div>

          
          <div class="form-group text-center">
              <button type="submit" class="btn btn-success" {{action 'register'}}>Registruj se</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
