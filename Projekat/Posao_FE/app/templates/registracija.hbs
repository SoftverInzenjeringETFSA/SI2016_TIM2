<div class="registrationPage container">
  <div class="row">
    <form class="form-horizontal-reg">

      <div class="form-group-reg">
        <label for="inputUsername1" class="col-sm-2 control-label">Username:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" id="inputUsername1" placeholder="Username" value=username}}
        </div>
      </div>

      <div class="form-group-reg">
        <label for="inputPassword3" class="col-sm-2 control-label">Password:</label>
        <div class="col-sm-10">
          {{input type="password" class="form-control" id="inputPassword3" placeholder="Password" value=password}}
        </div>
      </div>

      <div class="form-group-reg">
        <label for="inputEmail3" class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-10">
          {{input type="email" class="form-control" id="inputEmail3" placeholder="Email" value=email}}
        </div>
      </div>

      <div class="form-group-reg">
        <label for="tipKorisnika" class="col-sm-2 control-label">Tip korisnika:</label>
        <div class="col-sm-10">
          <label class="radio-inline">
            {{radio-button value="Nezaposleni" checked=tip name="tipKorisnika"}}Nezaposleni
          </label>
          <label class="radio-inline">
            {{radio-button value="Poslodavac" checked=tip name="tipKorisnika"}}Poslodavac
          </label>
        </div>
      </div>

      <div class="form-group-reg">
        <label for="inputIme1" class="col-sm-2 control-label">Ime:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" id="inputIme1" placeholder="Ime" value=ime}}
        </div>
      </div>

      <div class="form-group-reg">
        <label for="inputPrezime1" class="col-sm-2 control-label">Prezime:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" id="inputPrezime1" placeholder="Prezime" value=prezime}}
        </div>
      </div>

      <div class="form-group-reg">
        <label for="inputFirma1" class="col-sm-2 control-label">Firma:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" id="inputFirma1" placeholder="Firma" value=firma}}
        </div>
      </div>

      <div class="form-group-reg">
        <label for="inputTelefon1" class="col-sm-2 control-label">Telefon:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control" id="inputTelefon1" placeholder="123456789" value=telefon}}
        </div>
      </div>

      <div class="form-group-reg">
        <label for="inputCV" class="col-sm-2 control-label">CV:</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="inputCV">{{cv}}</textarea>
        </div>
      </div>

      <div class="form-group-reg">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Registruj se</button>
        </div>
      </div>
    </form>
  </div>
</div>
